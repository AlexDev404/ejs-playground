<!-- views/components/navbar.ejs -->

<div class="flex">
  <nav class="flex justify-around items-center bg-slate-600 w-full py-8 text-white text-2xl font-semibold">
    <NavElement onclick="location.href = '/'" class="cursor-pointer hover:underline">Home</NavElement>
    <% if (!loggedIn) { %>
      <NavElement onclick="location.href = '/about'" class="cursor-pointer hover:underline">About</NavElement>
      <% } else { %>
        <NavElement onclick="logout();" class="cursor-pointer hover:underline">Log Out</NavElement>
        <% } %>
  </nav>
</div>

<script>
  function logout() {
    localStorage.clear();
    setTimeout(() => {
      location.href = '/';
    }, 2000);
  }
</script>